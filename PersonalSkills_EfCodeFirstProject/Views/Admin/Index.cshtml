@using PersonalSkills_EfCodeFirstProject.Models.Entities
@model List<Skill>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SkillsLayoutNavbar.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Skill</th>
        <th>Value</th>
        <th></th>
    </tr>
    
    
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Description</td>
            <td>@item.Value</td>
            <td><a class="btn btn-success" href="/Admin/DeleteSkill/@item.Id">Sil</a> <a class="btn btn-danger" href="/Admin/UpdateSkill/@item.Id">Güncelle</a></td>
            
        </tr>
    }

</table>

